@model IEnumerable<WebApp.Models.ViewLandPlot>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>FARMBOOK - แก้ไขทะเบียนแปลง</title>
</head>
<body style="color:black;background-color:whitesmoke;">
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <div class="col">
                <div class="row">
                    <div class="col-md-11">
                        <h4>
                            แผนงาน
                            <span class="m-0 font-weight-bold text-primary">
                                แปลงที่ดิน @ViewBag.LandPlot แปลง
                            </span>
                        </h4>
                    </div>
                    <div class="col-md-1">
                        <a class="btn btn-secondary" href="@Url.Action("Index", "LandPlot")">
                            <span>
                                กลับ
                            </span>
                        </a>
                    </div>
                </div>
                @*<h4 class="m-0 font-weight-bold text-primary">แปลงที่ดิน @ViewBag.LandPlot แปลง</h4>*@
                <hr />
                @{ var i = 0;}
                @foreach (var model in Model)
                {
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card bg-light mb-3">
                                    <div class="card-body">
                                        <nav>
                                            <div class="nav nav-tabs" id="nav-tab" role="tablist">
                                                <a class="nav-item nav-link alert-success" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">
                                                    โครงการ  @{i++;}
                                                    @i
                                                </a>
                                            </div>
                                        </nav>

                                        <div class="row">

                                            <div class="col-sm-12">
                                                <br />
                                                <div class="tab-content" id="nav-tabContent">
                                                    <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                        @Html.HiddenFor(modelItem => model.ID)
                                                        <br />
                                                        <h5>ข้อมูลแปลง</h5>
                                                        <br />
                                                        <div class="form-group row">
                                                            @Html.LabelFor(modelItem => model.name, htmlAttributes: new { @class = "control-label col-md-2" })
                                                            <div class="col-md-4">
                                                                @Html.DisplayFor(modelItem => model.name, new { htmlAttributes = new { @class = "form-control" } })
                                                                @Html.ValidationMessageFor(modelItem => model.name, "", new { @class = "text-danger" })
                                                            </div>
                                                            @Html.LabelFor(modelItem => model.plotName, htmlAttributes: new { @class = "control-label col-md-2" })
                                                            <div class="col-md-4">
                                                                @Html.DisplayFor(modelItem => model.plotName, new { htmlAttributes = new { @class = "form-control" } })
                                                                @Html.ValidationMessageFor(modelItem => model.plotName, "", new { @class = "text-danger" })
                                                            </div>
                                                        </div>
                                                        <div class="form-group row">
                                                            @Html.LabelFor(modelItem => model.administrator, htmlAttributes: new { @class = "control-label col-md-2" })
                                                            <div class="col-md-4">
                                                                @Html.DisplayFor(modelItem => model.administrator, new { htmlAttributes = new { @class = "form-control" } })
                                                                @Html.ValidationMessageFor(modelItem => model.administrator, "", new { @class = "text-danger" })
                                                            </div>
                                                            @Html.LabelFor(modelItem => model.areaPlot, htmlAttributes: new { @class = "control-label col-md-2" })
                                                            <div class="col-md-4">
                                                                @Html.DisplayFor(modelItem => model.areaPlot, new { htmlAttributes = new { @class = "form-control" } })
                                                                @Html.ValidationMessageFor(modelItem => model.areaPlot, "", new { @class = "text-danger" })
                                                            </div>
                                                        </div>
                                                        <br />
                                                        <h5>ข้อมูลโครงการ</h5>
                                                        <br />
                                                        <div class="form-group row">
                                                            @Html.LabelFor(modelItem => model.projectName, htmlAttributes: new { @class = "control-label col-md-2" })
                                                            <div class="col-md-4">
                                                                @Html.DisplayFor(modelItem => model.projectName, new { htmlAttributes = new { @class = "form-control" } })
                                                                @Html.ValidationMessageFor(modelItem => model.projectName, "", new { @class = "text-danger" })
                                                            </div>
                                                            @Html.LabelFor(modelItem => model.plotDetails, htmlAttributes: new { @class = "control-label col-md-2" })
                                                            <div class="col-md-4">
                                                                @Html.DisplayFor(modelItem => model.plotDetails, new { htmlAttributes = new { @class = "form-control" } })
                                                                @Html.ValidationMessageFor(modelItem => model.plotDetails, "", new { @class = "text-danger" })
                                                            </div>
                                                        </div>
                                                        <div class="form-group row">
                                                            @Html.LabelFor(modelItem => model.nameBuy, htmlAttributes: new { @class = "control-label col-md-2" })
                                                            <div class="col-md-4">
                                                                @Html.DisplayFor(modelItem => model.nameBuy, new { htmlAttributes = new { @class = "form-control" } })
                                                                @Html.ValidationMessageFor(modelItem => model.nameBuy, "", new { @class = "text-danger" })
                                                            </div>
                                                            @Html.LabelFor(modelItem => model.plotStatus, htmlAttributes: new { @class = "control-label col-md-2" })
                                                            <div class="col-md-4">
                                                                @Html.DisplayFor(modelItem => model.plotStatus, new { htmlAttributes = new { @class = "form-control" } })
                                                                @Html.ValidationMessageFor(modelItem => model.plotStatus, "", new { @class = "text-danger" })
                                                            </div>
                                                        </div>
                                                        <br />
                                                        <br />
                                                    </div>

                                                </div>
                                            </div>
                                            <div class="container">
                                                <div class="row justify-content-md-center">
                                                    <div class="form-group row">
                                                        @* <div class="col-6">
                                                                <a class="btn btn-secondary" href="@Url.Action("Index", "LandPlot")">
                                                                    <span>
                                                                        กลับ
                                                                    </span>
                                                                </a>
                                                            </div>*@
                                                        <div class="col-12">
                                                            <a class="btn btn-primary" href="@Url.Action("Edit", "LandPlot", new { id = model.ID })">
                                                                <span>
                                                                    แก้ไข
                                                                </span>
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br />
                }

            </div>
        </div>
    }
    <!-- Bootstrap core JavaScript-->
    <script src="~/Content/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>
