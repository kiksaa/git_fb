@model WebApp.Models.staple

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>FARMBOOK - ลบทะเบียนวัตถุดิบ</title>
</head>
<body style="color:black;background-color:whitesmoke;">
    <div class="container">
        <div class="row justify-content-md-center">
            <h3>คุณแน่ใจที่จะลบข้อมูลใช่หรือไม่</h3>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="container">
                    <div class="form-actions no-color">
                        <a type="button" class="btn btn-danger" href="@Url.Action("IndexSum", "Equipment")">
                            <span>
                                ยกเลิก
                            </span>
                        </a>
                        <input type="submit" value="ลบ" class="btn btn-success me-md-2" />
                    </div>
                </div>
            }
        </div>
    </div>
    <div>
        <hr />
        <div class="container">
            <div class="row justify-content-md-center">
                <div class="card" style="width: 50rem;">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            @Html.DisplayNameFor(model => model.stapleType) :
                            @Html.DropDownListFor(model => model.stapleType, (IEnumerable<SelectListItem>)ViewBag.stapletypes, "เลือกประเภทวัตถุดิบ", htmlAttributes: new { @class = "form-control" })
                        </li>
                        <li class="list-group-item">
                            @Html.DisplayNameFor(model => model.stapleID) :
                            @Html.DisplayFor(model => model.stapleID)
                        </li>
                        <li class="list-group-item">
                            @Html.DisplayNameFor(model => model.stapleName) :
                            @Html.DisplayFor(model => model.stapleName)
                        </li>
                        <li class="list-group-item">
                            @Html.DisplayNameFor(model => model.dateBuy) :
                            @Html.DisplayFor(model => model.dateBuy)
                        </li>
                        <li class="list-group-item">
                            @Html.DisplayNameFor(model => model.stapleImg) :
                            @Html.DisplayFor(model => model.stapleImg)
                            <img src="data:image;base64,@System.Convert.ToBase64String(ViewBag.img)" width="190" height="210" />
                        </li>

                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap core JavaScript-->
    <script src="~/Content/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>
