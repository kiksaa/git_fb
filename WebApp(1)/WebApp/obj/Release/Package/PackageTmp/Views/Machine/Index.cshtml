@model IEnumerable<WebApp.Models.ViewModel>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>FARMBOOK - ทะเบียนเครื่องจักร</title>
</head>
<body>
    <div class="container-fluid">
        <br />
        <div class="card shadow mb-4">
            @*<div class="collapse" id="vehicle" aria-labelledby="vehicle">*@

            <div class="card-header py-3">
                <div class="row justify-content-between">
                    <div class="col-2">
                        <h4 class="m-0 font-weight-bold text-success">@ViewBag.TotalMachine รายการ</h4>
                    </div>
                    @if (ViewBag.status == "100")
                    {
                        <a type="button" class="btn btn-success" id="newregister" href="@Url.Action("Create", "Machine")">
                            <span>
                                + สร้างใหม่
                            </span>
                        </a>
                    }
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.IDmac)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.machineType)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.machineID)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.machineName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.detailM)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.priceM)
                                </th>
                                @if (ViewBag.status == "100")
                                {

                                    <th>
                                        ลบ/ แก้ไข
                                    </th>
                                }
                                @if (ViewBag.status == "200" || ViewBag.status == "300")
                                {
                                    <th>
                                        รายละเอียด
                                    </th>
                                }
                            </tr>
                        </thead>
                        @{ var i = 0;}
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @{i++;}
                                        @i
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.machineType)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.machineID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.machineName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.detailM)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.priceM)
                                    </td>

