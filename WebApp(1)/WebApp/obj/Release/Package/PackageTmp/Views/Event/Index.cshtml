@model IEnumerable<WebApp.Models.ViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>FARMBOOK - ทะเบียนพลังงานและเชื้อเพลิง</title>
</head>
<body>
    <div class="container-fluid">
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <div class="col align-self-start">
                <div class="col-10">
                    <h3 class="text-muted">ปฏิทินงาน </h3>
                </div>
            </div>
            &nbsp;&nbsp;&nbsp;
            <a type="button" class="btn btn-info me-md-2" href="@Url.Action("Index", "Account")">
                <span>
                    กลับหน้าแรก
                </span>
            </a>
            &nbsp;&nbsp;&nbsp;
            @if (ViewBag.status == "100")
            {
                <a type="button" class="btn btn-success" id="newregister" href="@Url.Action("Create", "Event")">
                    <span>
                        + สร้างใหม่
                    </span>
                </a>
            }
        </div>
        <hr />
        @if (ViewBag.status == "100")
        { 
            <div class="row">
                @foreach (var model in Model.OrderBy(s => s.start))
                {
                    <div class="col-sm-3">
                        <div class="card-body">
                            <div class="card" style="width: 24rem;">
                                <div class="card-body" style="background-color: beige">
                                    <h5 class="card-title"> <b> @Html.DisplayNameFor(item => item.subject) : </b> @Html.DisplayFor(modelItem => model.subject) </h5>
                                    <hr />
                                    <p> <b> @Html.DisplayNameFor(item => item.start) :</b> @Html.DisplayFor(modelItem => model.start) </p>
                                    <p> <b> @Html.DisplayNameFor(item => item.end) :</b> @Html.DisplayFor(modelItem => model.end) </p>
                                    <p> <b> @Html.DisplayNameFor(item => item.description) :</b> @Html.DisplayFor(modelItem => model.description) </p>
                                    <p> <b> @Html.DisplayNameFor(item => item.isFullDay) :</b> @Html.DisplayFor(modelItem => model.isFullDay) </p>
                                    <hr />
                                    <!-- Button trigger modal -->
                                    <a class="btn-sm btn-outline-danger" href="@Url.Action("Delete", "Event", new { id = model.ID })">
                                        @*<a class="btn-sm btn-outline-danger" data-toggle="modal" data-target="#exampleModal" data-id="{{ $company->id }}" data-id="@Html.ValueFor(modelItem => model.ID)", new { id=model.ID }>*@
                                        ลบ
                                    </a>
                                    <a class="btn-sm btn-outline-primary" href="@Url.Action("Edit", "Event", new { id = model.ID })">
                                        <span>
                                            แก้ไข
                                        </span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Modal -->
                    @*<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">ลบกิจกรรม <span>@Html.DisplayFor(modelItem => model.subject)</span> </h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <p> คุณต้องการลบกิจกรรม <b style="color:red; background-color:cornsilk;">@Html.DisplayFor(modelItem => model.subject)</b> ใช่หรือไม่ </p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-danger" data-dismiss="modal">ยกเลิก</button>
                                    @using (Html.BeginForm("Delete", "Event", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        @Html.HiddenFor(modelItem => model.ID)
                                        <input type="submit" value="ลบ" class="btn btn-success" />
                                    }
                                </div>
                            </div>
                        </div>
                    </div>*@
                }&nbsp;&nbsp;
            </div>
            }
    </div>
</body>
</html>
