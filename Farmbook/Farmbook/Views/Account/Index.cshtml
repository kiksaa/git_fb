                                                        <path fill-rule="evenodd" d="M6 8V1h1v6.117L8.743 6.07a.5.5 0 0 1 .514 0L11 7.117V1h1v7a.5.5 0 0 1-.757.429L9 7.083 6.757 8.43A.5.5 0 0 1 6 8z" />
                                                    </svg>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </a>
                            </div>
                            <div class="col">
                                <div class="btn btn-outline-warning mb-4 shadow-sm" href="#" style="color:btn-outline-lightyellow;background-color:olivedrab;">
                                    <div class="card-body">
                                        <h2 class="card-title pricing-card-title">9 <small class="text-lightyellow">/ ปฏิทินงาน</small></h2>
                                        <ul class="list-unstyled mt-3 mb-4">
                                            <li>
                                                <svg xmlns="http://www.w3.org/2000/svg" width="17em" height="6em" fill="currentColor" class="bi bi-calendar2-week" viewBox="0 0 16 16">
                                                    <path fill-rule="evenodd" d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM2 2a1 1 0 0 0-1 1v11a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V3a1 1 0 0 0-1-1H2z" />
