                                                        <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                                                    </svg>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </a>
                            </div>
                            <div class="col">
                                <a type="button" href="@Url.Action("Index", "Register")">
                                    <div class="btn btn-outline-warning mb-4 shadow-sm" style="color:btn-outline-lightyellow;background-color:green;">
                                        <div class="card-body">
                                            <h2 class="card-title pricing-card-title">@ViewBag.TotalRegisters<small class="text-lightyellow">/ ทะเบียนเกษตรกร</small></h2>
                                            <ul class="list-unstyled mt-3 mb-4">
                                                <li>
                                                    <svg width="17em" height="6em" viewBox="0 0 16 16" class="bi bi-people" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
