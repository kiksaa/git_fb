@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <title>FARMBOOK - หน้าแรก</title>

    <!-- Custom fonts for this template-->
    <link href="~/Content/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/Content/css/sb-admin-2.min.css" rel="stylesheet">
</head>
<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">
        <!-- End of Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">
                <!-- End of Topbar -->
                <!-- Begin Page Content -->
                <div class="card text-center c-2">
                    <div class="card-body">
                        <blockquote class="blockquote mb-0">
                            @{
                                var txt = "";
                                if (DateTime.Now.Hour >= 17)
                                { txt = "สวัสดียามเย็น"; }
                                else if (DateTime.Now.Hour >= 13 && DateTime.Now.Hour <= 16)
                                { txt = "สวัสดียามบ่าย"; }
                                else if (DateTime.Now.Hour >= 9 && DateTime.Now.Hour <= 12)
                                { txt = "สวัสดียามสาย"; }
                                else
                                { txt = "สวัสดียามเช้า"; }
                            }
                            <h2>@txt</h2>

                            @DateTime.Now.ToString("วันdddd dd MMMM yyyy HH:mm tt")
                            <p>คุณ @Html.Encode(User.Identity.Name)</p>
                        </blockquote>
                    </div>
                </div>

                <br />
                <div class="container-fluid">
                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">หน้าแรก</h1>
                    </div>
                    <!-- Content Row -->
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col">
                                <a type="button" href="@Url.Action("Index", "Theory")">
                                    <div class="btn btn-outline-warning mb-4 shadow-sm" style="color:btn-outline-lightyellow;background-color:darkgreen;">
                                        <div class="card-body">
                                            <h2 class="card-title pricing-card-title">@ViewBag.TotalTheory<small class="text-lightyellow">/ ขั้นตอนการทำงาน</small></h2>
                                            <ul class="list-unstyled mt-3 mb-4">
                                                <li>
                                                    <svg width="17em" height="6em" viewBox="0 0 16 16" class="bi bi-pencil-square" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
