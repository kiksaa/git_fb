@model Farmbook.Models.profile
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ลงทะเบียน</title>
    <link rel="shortcut icon" href="~/Content/img/logo/farmbook-logo.png" />
    <!-- Custom fonts for this template-->
    <link href="~/Content/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/Content/css/sb-admin-2.min.css" rel="stylesheet">
</head>
<body class="bg-gradient-info">
    <div class="container">
        <br /><br />
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <img class="col-lg-5 d-none d-lg-block" src="~/Content/img/13.jpg">
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">สร้างบัญชีผู้ใช้ใหม่</h1>
                            </div>
                            @using (Html.BeginForm("SaveRegisterDetails", "Account"))
                            {
                                <div style="color:red;">@Html.ValidationSummary()</div>
                                <div class="row">
                                    <!--Show details are saved successfully message-->
                                    @if (@ViewBag.Message1 == "อีเมล์นี้เคยลงทะเบียนใช้แล้ว")
                                    {
                                        <div class="col-lg-12" style="color:red;">@ViewBag.Message1</div>
                                    }

                                </div><br />
                                <div class="form-group row">
                                    <div class="col-lg-6">
                                        @Html.LabelFor(a => a.name)
                                        @Html.TextBoxFor(a => a.name, new { @class = "form-control", placeholder = "ชื่อ-นามสกุล", required = "required" })
                                    </div>
                                    <div class="col-lg-6">
                                        @Html.LabelFor(a => a.cradID)
                                        @Html.TextBoxFor(a => a.cradID, new { @class = "form-control", placeholder = "เลขบัตรประชาชน", required = "required" })
                                    </div>
                                </div>
                                <br />
                                <div class="form-group row">
                                    @Html.LabelFor(a => a.gender, htmlAttributes: new { @class = "control-label col-md-2" })
                                    @*<div class="col-lg-10">@Html.TextBoxFor(a => a.gender, new { @class = "form-control" })</div>*@
                                    <div class="col-lg-4">
                                        @Html.RadioButtonFor(a => a.gender, "100")
                                        @Html.Label("ชาย")
                                        @Html.ValidationMessageFor(a => a.gender, "", new { @class = "text-danger" })

                                        @Html.RadioButtonFor(a => a.gender, "200")
                                        @Html.Label("หญิง")
                                        @Html.ValidationMessageFor(a => a.gender, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-lg-6">
                                        @Html.LabelFor(a => a.birthday)
                                        @Html.TextBoxFor(a => a.birthday, new { @class = "form-control", placeholder = "วัน/เดือน/ปี(พ.ศ) เกิด", required = "required" })
                                    </div>
                                </div>
                                <br />
                                <div class="form-group row">
                                    <div class="col-lg-6">
                                        @Html.LabelFor(a => a.email)
                                        @Html.TextBoxFor(a => a.email, new { @class = "form-control", placeholder = "อีเมล์", required = "required" })
                                    </div>
                                    <div class="col-lg-6">
                                        @Html.LabelFor(a => a.password)
                                        @Html.TextBoxFor(a => a.password, new { @class = "form-control", type = "Password", placeholder = "รหัสผ่าน", required = "required" })
                                    </div>
                                </div>
                                <br />
                                <div class="row">
                                    @Html.LabelFor(a => a.registerType, htmlAttributes: new { @class = "control-label col-md-3" })
                                    @*<div class="col-lg-10">@Html.TextBoxFor(a => a.gender, new { @class = "form-control" })</div>*@
                                    <div class="col-lg-5">
                                        @Html.RadioButtonFor(a => a.registerType, "100")
                                        @Html.Label("เกษตรกร/ผู้ใช้งานทั่วไป")
                                        @Html.ValidationMessageFor(a => a.registerType, "", new { @class = "text-danger" })
                                        <br />
                                        @Html.RadioButtonFor(a => a.registerType, "200")
                                        @Html.Label("สหกรณ์/วิสาหกิจ")
                                        @Html.ValidationMessageFor(a => a.gender, "", new { @class = "text-danger" })
                                        <br />
                                        @Html.RadioButtonFor(a => a.registerType, "300")
                                        @Html.Label("บริษัท/โรงงาน")
                                        @Html.ValidationMessageFor(a => a.gender, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <br />
                                <input type="submit" value="สมัครสมาชิก" class="btn btn-success btn-user btn-block" />
                                <hr>
                                <a href="index.html" class="btn btn-google btn-user btn-block">
                                    <i class="fab fa-google fa-fw"></i> Register with Google
                                </a>

                            }
                            <div class="text-center">
                                @Html.ActionLink("ลงชื่อเข้าใช้", "Login")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <!-- Bootstrap core JavaScript-->
    <script src="~/Content/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/Content/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/Content/js/sb-admin-2.min.js"></script>
</body>
</html>