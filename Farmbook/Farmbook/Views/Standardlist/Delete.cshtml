@model Farmbook.Models.standardlist

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>FARMBOOK - ลบทะเบียนพาหนะ</title>
</head>
<body style="color:black;background-color:whitesmoke;">
    <br />
    <div class="container">
        <div class="row justify-content-md-center">
            <h3>คุณแน่ใจที่จะลบข้อมูลใช่หรือไม่</h3>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="container">
                    <div class="form-actions no-color">
                        <a type="button" class="btn btn-danger" href="@Url.Action("Index", "Project")">
                            <span>
                                ยกเลิก
                            </span>
                        </a>
                        <input type="submit" value="ลบ" class="btn btn-success me-md-2" />
                    </div>
                </div>
            }
        </div>
    </div>
    <div>
        <hr />
        <div class="container">
            <div class="row justify-content-md-center">
                <div class="card" style="width: 50rem;">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            @Html.DisplayNameFor(model => model.IDlist) :
                            @Html.DisplayFor(model => model.IDlist)
                        </li>
                        <li class="list-group-item">
                            @Html.DisplayNameFor(model => model.list) :
                            @Html.DisplayFor(model => model.list)
                        </li>
                        <li class="list-group-item">
                            @Html.DisplayNameFor(model => model.fillin) :
                            @Html.DisplayFor(model => model.fillin)
                        </li>
                        <li class="list-group-item">
                            @Html.DisplayNameFor(model => model.img) :
                            @Html.DisplayFor(model => model.img)
                        </li>
                        <li class="list-group-item">
                            @Html.DisplayNameFor(model => model.IDpro) :
                            @Html.DisplayFor(model => model.IDpro)
                            @Html.DropDownListFor(model => model.IDpro, (IEnumerable<SelectListItem>)ViewBag.projects, "เลือกชื่อโครงการ", htmlAttributes: new { @class = "form-control" })
                        </li>

                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap core JavaScript-->
    <script src="~/Content/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>

