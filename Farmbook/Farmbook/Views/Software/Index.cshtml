@model IEnumerable<Farmbook.Models.ViewModel>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>FARMBOOK - ทะเบียนซอฟต์แวร์</title>
</head>
<body>
    <div class="container-fluid">
        <br />
        <div class="card shadow mb-4">
            @*<div class="collapse" id="vehicle" aria-labelledby="vehicle">*@

            <div class="card-header py-3">
                <div class="row  justify-content-between">
                    <div class="col-2">
                        <h4 class="m-0 font-weight-bold text-primary">@ViewBag.TotalSoftware รายการ</h4>
                    </div>
                    <a type="button" class="btn btn-success" id="newregister" href="@Url.Action("Create", "Software")">
                        <span>
                            + สร้างใหม่
                        </span>
                    </a>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.IDsoft)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.softwareType)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.softwareID)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.softwareName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.detailS)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.priceS)
                                </th>
                                <th>ลบ / แก้ไข</th>
                            </tr>
                        </thead>
                        @{ var i = 0;}
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @{i++;}
                                        @i
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.softwareType)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.softwareID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.softwareName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.detailS)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.priceS)
                                    </td>

                                    <td>
                                        <a class="btn-sm btn-outline-danger" href="@Url.Action("Delete", "Software", new { id = item.IDsoft })">
                                            <span>
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                                                    <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                                                </svg>
                                            </span>
                                        </a> &nbsp; &nbsp;
                                        <a class="btn-sm btn-outline-primary" href="@Url.Action("Edit", "Software", new { id = item.IDsoft })">
                                            <span>
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen" viewBox="0 0 16 16">
                                                    <path d="M13.498.795l.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001zm-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708l-1.585-1.585z" />
                                                </svg>
                                            </span>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            @*</div>*@
        </div>

    </div>

</body>
</html>
