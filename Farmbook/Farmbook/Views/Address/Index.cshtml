    <script type="text/javascript">
        $('#Province').change(function () {
            var selectedProvince = $("#Province").val();
            var amphersSelect = $('#Ampher');
            amphersSelect.empty();
            if (selectedProvince != null && selectedProvince != '') {
                $.getJSON('@Url.Action("GetAmphers")', { ampherId: selectedProvince }, function (ampher) {
                    if (ampher != null && !jQuery.isEmptyObject(ampher))
                        {
                            amphersSelect.append($('<option/>', {
                                value: null,
                                text: ""
                            }));
                        $.each(ampher, function (index, ampher) {
                                amphersSelect.append($('<option/>', {
                                    value: ampher.Value,
                                    text: ampher.Text
                                }));
                            });
                        };
                    });
                }
            });
    </script>